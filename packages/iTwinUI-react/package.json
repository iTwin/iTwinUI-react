{
  "name": "@itwin/itwinui-react",
  "version": "1.47.1",
  "author": "Bentley Systems",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "cjs/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "description": "A react implementation of our iTwinUI UX standards",
  "homepage": "https://github.com/iTwin/iTwinUI-react",
  "keywords": [
    "component",
    "components",
    "design-system",
    "design",
    "framework",
    "frontend",
    "itwin",
    "itwinui",
    "react-component",
    "react",
    "ui",
    "ux"
  ],
  "scripts": {
    "build": "yarn clean:build && yarn copy-files && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "build:watch": "yarn clean:build && yarn copy-files && concurrently \"tsc -p tsconfig.cjs.json --watch\" \"tsc -p tsconfig.esm.json --watch\"",
    "clean:build": "yarn clean:coverage && rimraf esm && rimraf cjs",
    "clean:coverage": "rimraf coverage",
    "clean": "rimraf .turbo && yarn clean:coverage && yarn clean:build && rimraf node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --config .prettierrc **/*.{tsx,ts,js} --ignore-path .gitignore --write",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --max-warnings=0",
    "lint:fix": "yarn lint --fix && node ../configs/copyrightLinter.js --fix \"*/**/*.{js,ts,tsx}\"",
    "copy-files": "cpy \"../../{README,LICENSE}.md\" .",
    "dev": "yarn build:watch",
    "createComponent": "node ../../scripts/createComponent.js"
  },
  "dependencies": {
    "@itwin/itwinui-css": "^0.63.0",
    "@itwin/itwinui-icons-react": "^1.10.1",
    "@itwin/itwinui-illustrations-react": "^1.3.1",
    "@tippyjs/react": "^4.2.6",
    "@types/react-table": "^7.0.18",
    "classnames": "^2.2.6",
    "react-table": "^7.1.0",
    "react-transition-group": "^4.4.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/classnames": "^2.2.7",
    "@types/jest": "^27.0.0",
    "@types/node": "^10.12.2",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "configs": "*",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "inquirer": "^6.2.2",
    "jest": "^28.1.0",
    "jest-cli": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-junit": "^13.2.0",
    "markdown-to-jsx": "6.11.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^8.0.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": ">=16.8.6 < 19.0.0",
    "react-dom": ">=16.8.6 < 19.0.0"
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "prettier --write",
      "eslint --max-warnings=0 --fix",
      "node ../configs/copyrightLinter.js --fix"
    ]
  },
  "prettier": "configs/prettier-config",
  "sideEffects": [
    "**/*.scss",
    "**/*.css"
  ]
}
