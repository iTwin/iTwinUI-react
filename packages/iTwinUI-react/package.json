{
  "name": "@itwin/itwinui-react",
  "version": "1.38.1",
  "author": "Bentley Systems",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "cjs/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "description": "A react implementation of our iTwinUI UX standards",
  "homepage": "https://github.com/iTwin/iTwinUI-react",
  "keywords": [
    "component",
    "components",
    "design-system",
    "design",
    "framework",
    "frontend",
    "itwin",
    "itwinui",
    "react-component",
    "react",
    "ui",
    "ux"
  ],
  "scripts": {
    "build": "yarn clean && yarn copy-files && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "build:watch": "yarn clean && yarn copy-files && concurrently \"tsc -p tsconfig.cjs.json --watch\" \"tsc -p tsconfig.esm.json --watch\"",
    "clean": "yarn clean:coverage && rimraf esm && rimraf cjs",
    "clean:coverage": "rimraf coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "createComponent": "node scripts/createComponent.js",
    "format": "prettier --config .prettierrc **/*.{tsx,ts,js} --ignore-path .gitignore --write",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --max-warnings=0",
    "lint:fix": "yarn lint --fix && node ../configs/copyrightLinter.js --fix \"*/**/*.{js,ts,tsx}\"",
    "copy-files": "cpy \"../../{README,LICENSE}.md\" .",
    "dev": "yarn build:watch"
  },
  "dependencies": {
    "@itwin/itwinui-css": "^0.59.0",
    "@itwin/itwinui-icons-react": "^1.5.0",
    "@itwin/itwinui-illustrations-react": "^1.0.1",
    "@tippyjs/react": "^4.2.5",
    "@types/react-table": "^7.0.18",
    "classnames": "^2.2.6",
    "react-table": "^7.1.0",
    "react-transition-group": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/classnames": "^2.2.7",
    "@types/jest": "^27.0.0",
    "@types/node": "^10.12.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-transition-group": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "configs": "*",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "inquirer": "^6.2.2",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "jest-junit": "^12.0.0",
    "markdown-to-jsx": "6.11.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tippy.js": "^6.3.1",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^8.0.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.0",
    "react-dom": "^16.8.6 || ^17.0.0"
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "prettier --write",
      "eslint --max-warnings=0 --fix",
      "node ../configs/copyrightLinter.js --fix"
    ]
  },
  "prettier": "configs/prettier-config",
  "sideEffects": [
    "**/*.scss",
    "**/*.css"
  ]
}
