---
const sizes = ['3xs', '2xs', 'xs', 's', 'm', 'l', 'xl', '2xl', '3xl'];
---

<article>
  {
    sizes.map((size) => (
      <div>
        <span>{`--iui-size-${size}`}</span>
        <span class='box' style={{ '--size': `var(--iui-size-${size})` }} />
      </div>
    ))
  }
</article>

<style>
  article {
    border-radius: var(--space-2);
    border: 1px solid var(--color-line-2);
    display: grid;
    gap: var(--space-3);
    padding: var(--space-3);
  }

  div {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  span {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--type-0);
  }

  .box {
    width: var(--size);
    height: 100%;
    background-color: var(--iui-color-foreground-primary);
    border-radius: var(--iui-border-radius);
  }
</style>
