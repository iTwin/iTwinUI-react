---
import { renderJSX } from 'astro/dist/runtime/server';
import fs from 'node:fs';

export type Props = {
  /** name of the file to read code example from, should be located in ~/examples folder */
  icon: string;
};

const { icon } = Astro.props;

const allThumbnails = await Astro.glob('../icons/component-icons/*.astro');
const thumbnail = allThumbnails.find(({ file }) => file.endsWith(`${icon}.astro`));
---

<thumbnail.default class='thumbnail' />

<style lang='scss' is:global>
  .thumbnail {
    height: calc(var(--space-6) * 6);
    width: 100%;
  }

  .main-color {
    fill: #fff;
  }

  .highlight-color {
    fill: var(--color-highlight-2);
  }

  .extra-color {
    fill: #e1e1e1;
  }

  .opacity-background {
    opacity: 0.1;
  }

  .opacity-light {
    opacity: 0.2;
  }

  .opacity-light-medium {
    opacity: 0.3;
  }

  .opacity-medium {
    opacity: 0.4;
  }

  .opacity-heavy {
    opacity: 0.5;
  }

  .opacity-heavier {
    opacity: 0.6;
  }

  .stroke-line {
    fill: none;
    opacity: 0.4;
    stroke: #fff;
    stroke-linecap: round;
    stroke-miterlimit: 10;
    stroke-width: 3px;

    &.light {
      opacity: 0.1;
    }

    &.title-line {
      stroke-width: 4px;
    }

    &.highlight {
      opacity: 1;
      stroke: var(--color-highlight-2);
    }

    &.square-cap {
      stroke-width: 2px;
      stroke-linecap: square;
    }

    &.symbol {
      stroke-width: 2px;
      stroke-linejoin: round;
    }
  }
</style>
