---
export type Props = { content?: any };

const { content = {} } = Astro.props;

const contentTitle = content.title ? `${content.title} | iTwinUI` : 'iTwinUI';
const contentDescription = `An open-source design system for building consistent, accessible experiences.`;
---

<title>{contentTitle}</title>

<!-- Page Metadata -->
<link rel='canonical' href={'https://www.itwinui.com'} />

<!-- OpenGraph Tags -->
<meta property='og:title' content={contentTitle} />
<meta property='og:type' content='article' />
<meta property='og:url' content={Astro.url} />
<meta property='og:locale' content={content.ogLocale ?? 'en-us'} />
<meta property='og:image' content={'/og-image.png'} />
<meta name='description' property='og:description' content={contentDescription} />
<meta property='og:site_name' content={contentTitle} />

<!-- Twitter Tags -->
<meta name='twitter:card' content='summary_large_image' />
<meta name='twitter:title' content={contentTitle} />
<meta name='twitter:description' content={contentDescription} />
<meta name='twitter:image' content={'/twitter-image.png'} />
